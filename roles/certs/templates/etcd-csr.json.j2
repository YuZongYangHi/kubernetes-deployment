{
  "CN": "etcd",
  "hosts": [
{% for host in groups['etcd'] %}
    "{{ hostvars[host].INTRANET_IP }}",
{% endfor %}
    "127.0.0.1"
  ],
  "key": {
    "algo": "rsa",
    "size": 2048
  },
  "names": [
    {
      "C": "CN",
      "ST": "Beijing",
      "L": "Beijing",
      "O": "{{ cert_o }}",
      "OU": "{{ cert_ou }}"
    }
  ]
}
